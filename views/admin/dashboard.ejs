<div class="admin-title">
  <h2>Posts</h2>
  <a href="/blog/add-post" class="button">+ Add New</a>
</div>

<ul class="admin-posts">
  <% data.forEach(post => { %>

  <li>
    <a href="/blog/post/<%= post._id %>"> <%= post.title %> &nearr; </a>
    <div class="admin-post-controls">
      <a href="/blog/edit-post/<%= post._id %>" class="btn">Edit</a>

      <form
        action="/blog/delete-post/<%= post._id %>?_method=DELETE"
        method="POST"
      >
        <input type="submit" value="Delete" class="btn-delete btn" />
      </form>
    </div>
  </li>

  <% }) %>
</ul>
